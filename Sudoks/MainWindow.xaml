                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </Button.Resources>

                    <Button.Triggers>


                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="LevelButton"
                  Storyboard.TargetProperty="Width"
                  From="100" To="130" Duration="0:0:1" />
                                    <DoubleAnimation Storyboard.TargetName="LevelButton"
                  Storyboard.TargetProperty="Height"
                  From="35" To="41" Duration="0:0:1" />
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="LevelButton"
                  Storyboard.TargetProperty="Width"
                  From="130" To="100" Duration="0:0:1" />
                                    <DoubleAnimation Storyboard.TargetName="LevelButton"
                  Storyboard.TargetProperty="Height"
                  From="41" To="35" Duration="0:0:1" />
                                </Storyboard>

                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>

                <CheckBox x:Name="checkBoxHelp" IsChecked="True" Grid.Column="2" HorizontalAlignment="Center"  Grid.Row="6" VerticalAlignment="Center"  Cursor="Hand"/>
                <Label x:Name="labelHelp" Grid.ColumnSpan="3" Grid.Column="3" Grid.Row="6" Grid.RowSpan="1" Foreground="#FF3E7499" Content="With help"  FontFamily="jazzy" FontSize="25" FontWeight="DemiBold" IsEnabled="False" Panel.ZIndex="2" Background="{x:Null}"/>



            </Grid>


        </StackPanel>
        

        <Canvas x:Name="myCanvas" Grid.ColumnSpan="13" Grid.RowSpan="16"/>
        <Canvas x:Name="secondCanvas" Grid.ColumnSpan="13" Grid.RowSpan="16"/>
        <Canvas x:Name="DzimsanasDienaCanvas" Grid.ColumnSpan="13" Grid.RowSpan="16"/>
    </Grid >




</Window>
